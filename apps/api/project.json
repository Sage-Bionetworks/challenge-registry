{
  "root": "apps/api",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "targets": {
    "prepare": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "pipenv install",
          "pipenv run pip install --upgrade jsonschema"
        ],
        "cwd": "apps/api",
        "parallel": false
      }
    },
    "generate-sources": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "openapi-generator-cli generate -g python-flask -i ../../libs/api-spec/openapi.yaml"
        ],
        "cwd": "apps/api"
      }
    },
    "serve": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "pipenv run python -m openapi_server"
        ],
        "cwd": "apps/api"
      }
    },
    "start-db": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "docker compose up -d db"
        ],
        "cwd": "apps/api"
      }
    },
    "stop-db": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "docker compose stop db"
        ],
        "cwd": "apps/api"
      }
    }
  },
  "tags": []
}
