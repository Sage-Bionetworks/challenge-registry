{
  "root": "apps/challenge-api-gateway",
  "sourceRoot": "apps/challenge-api-gateway/src",
  "projectType": "application",
  "targets": {
    "prepare": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "shx cp -n .env.example .env",
        "cwd": "apps/challenge-api-gateway"
      }
    },
    // "lint": {
    //   "executor": "@nrwl/workspace:run-commands",
    //   "options": {
    //     "command": "./mvnw checkstyle:check",
    //     "cwd": "apps/challenge-api-gateway"
    //   }
    // },
    "build": {
      "executor": "@nxrocks/nx-spring-boot:build",
      "options": {
        "root": "apps/challenge-api-gateway"
      }
    },
    "test": {
      "executor": "@nxrocks/nx-spring-boot:test",
      "options": {
        "root": "apps/challenge-api-gateway"
      }
    },
    "clean": {
      "executor": "@nxrocks/nx-spring-boot:clean",
      "options": {
        "root": "apps/challenge-api-gateway"
      }
    },
    "serve": {
      "executor": "@nxrocks/nx-spring-boot:serve",
      "options": {
        "root": "apps/challenge-api-gateway"
      },
      "dependsOn": [
        {
          "target": "build",
          "projects": "self"
        },
        {
          "target": "prepare",
          "projects": "self"
        },
        {
          "target": "serve-detach",
          "projects": "dependencies"
        }
      ]
    },
    "serve-detach": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "docker compose up -d",
        "cwd": "apps/challenge-api-gateway"
      },
      "dependsOn": [
        {
          "target": "build-image",
          "projects": "self"
        },
        {
          "target": "prepare",
          "projects": "self"
        },
        {
          "target": "serve-detach",
          "projects": "dependencies"
        }
      ]
    },
    "build-image": {
      "executor": "@nx-tools/nx-docker:build",
      "options": {
        "context": "apps/challenge-api-gateway",
        "push": false,
        "tags": [
          "sagebionetworks/challenge-api-gateway:latest"
        ]
      }
    }
  },
  "tags": [
    "type:service",
    "scope:backend"
  ],
  "implicitDependencies": [
    "challenge-service-registry"
    // "challenge-config-service"
  ]
}
