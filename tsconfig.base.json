{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@challenge-registry/api-angular": ["libs/api-angular/src/index.ts"],
      "@challenge-registry/shared/data-access-user": [
        "libs/shared/data-access-user/src/index.ts"
      ],
      "@challenge-registry/shared/web-components": [
        "libs/shared/web-components/src/index.ts"
      ],
      "@challenge-registry/web/config": ["libs/web/config/src/index.ts"],
      "@challenge-registry/web/data-access": [
        "libs/web/data-access/src/index.ts"
      ],
      "@challenge-registry/web/feature-home": [
        "libs/web/feature-home/src/index.ts"
      ],
      "@challenge-registry/web/pages": ["libs/web/pages/src/index.ts"],
      "@challenge-registry/web/ui": ["libs/web/ui/src/index.ts"],
      "@challenge-registry/web/util": ["libs/web/util/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
